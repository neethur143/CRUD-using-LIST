@model Employee

<div class="container shadow p-5">
    <div class="row pb-2">
        <h2>Delete Employee</h2>
    </div>

    <form method="post" asp-action="DeleteEmp">
        <input asp-for="Id" hidden />
        <div asp-validation-summary="All"></div>

        <div class="form-row">
            <div class="form-group col-md-6">
                <label asp-for="FullName">Employee Name</label>
                <input type="text" class="form-control mb-3" asp-for="FullName" disabled>
                <span asp-validation-for="FullName" class=" alert-danger"></span>
            </div>
            <div class="form-group col-md-6">
                <label asp-for="Id">ID</label>
                <input type="text" class="form-control mb-3" asp-for="Id" disabled>
                <span asp-validation-for="Id" class=" alert-danger"></span>
            </div>
        </div>

        <div class="form-row">
            <div class="form-group col-md-6">
                <label asp-for="Email">Email Address</label>
                <input type="text" class="form-control mb-3" asp-for="Email" disabled>
                <span asp-validation-for="Email" class=" alert-danger"></span>
            </div>
            <div class="form-group col-md-6 mb-3">
                <label asp-for="PhoneNumber">Phone Number</label>
                <input type="text" class="form-control" asp-for="PhoneNumber" disabled>
                <span asp-validation-for="PhoneNumber" class=" alert-danger"></span>
            </div>
        </div>
        <a asp-controller="Home" asp-action="Deleteemp" asp-route-id="@Model.Id" class="btn btn-sm btn-danger p-2" onclick="return confirm('Are you sure you want to delete this item?');">
            <i class="bi bi-trash-fill"></i>Delete
        </a>
        <a asp-controller="Home" asp-action="Index" class="btn btn-lg btn-warning p-2">Back To List</a>
    </form>

</div>


@*//for front end validations*@

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
